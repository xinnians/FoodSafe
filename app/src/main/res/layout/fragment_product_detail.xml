<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_41sdp"
        android:layout_height="@dimen/_36sdp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_nav_back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_36sdp"
        android:gravity="center"
        android:text="@string/product_detail_title"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_gray"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/information_item_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_gray">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="0dp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_50sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/tiffanyBlue" />

            <View
                android:id="@+id/block_gray1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@color/information_item_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product" />

            <TextView
                android:id="@+id/subtitle_information"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/product_detail_information_title"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/block_gray1" />

            <View
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/information_item_border"
                app:layout_constraintBottom_toBottomOf="@+id/subtitle_information"
                app:layout_constraintEnd_toStartOf="@+id/subtitle_information"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/subtitle_information" />

            <View
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/information_item_border"
                app:layout_constraintBottom_toBottomOf="@+id/subtitle_information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/subtitle_information"
                app:layout_constraintTop_toTopOf="@+id/subtitle_information" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_19sdp"
                android:gravity="start|center"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitle_information" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="0dp"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center"
                android:text="weight"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center"
                android:text="category"
                android:textColor="@color/tiffanyBlue"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight" />

            <TextView
                android:id="@+id/company"
                android:layout_width="0dp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center"
                android:text="company"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                android:id="@+id/checkDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center"
                android:text="checkDate"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/company" />

            <View
                android:id="@+id/block_gray2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@color/information_item_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkDate" />

            <TextView
                android:id="@+id/subtitle_report"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/product_detail_information_title"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/block_gray2" />

            <View
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/information_item_border"
                app:layout_constraintBottom_toBottomOf="@+id/subtitle_report"
                app:layout_constraintEnd_toStartOf="@+id/subtitle_report"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/subtitle_report" />

            <View
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/information_item_border"
                app:layout_constraintBottom_toBottomOf="@+id/subtitle_report"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/subtitle_report"
                app:layout_constraintTop_toTopOf="@+id/subtitle_report" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>